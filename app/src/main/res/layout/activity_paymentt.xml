<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paymentt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF6B5"
    tools:context="com.example.adriealle.smartparks.paymentt">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Mode"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8" />

    <TextView
        android:text="Money Owned:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="41dp"
        android:id="@+id/textView9" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#14C813"
        android:layout_alignTop="@+id/textView9"
        android:layout_toLeftOf="@+id/one"
        android:layout_toStartOf="@+id/one"
        android:textSize="30dp"
        android:id="@+id/textView10" />

    <ImageView
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:src="@drawable/paypal"
        android:layout_alignTop="@+id/one"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:src="@drawable/logok"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />
    <ImageView
        android:layout_height="100dp"
        android:layout_width="550dp"
        android:src="@drawable/title"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:text="Thank you for using"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView34"
        android:layout_above="@+id/imageView3"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Paytm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_above="@+id/textView34"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one"
        android:layout_marginBottom="28dp" />

    <ImageView
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:src="@drawable/pay"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:text="PayPal"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <Button
        android:text="Pay-on-spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/one"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <ImageView
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:src="@drawable/cash"
        android:id="@+id/imageView34"
        android:layout_above="@+id/imageView"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />


</RelativeLayout>
