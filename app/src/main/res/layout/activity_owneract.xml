<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_owneract"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F4F428"
    tools:context="com.example.adriealle.smartparks.owneract">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:id="@+id/image3"
        android:src="@drawable/logok"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:text="OWNER'S PAGE"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/tl" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:hint="Plate no."
                android:background="#ffffff"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_marginTop="100dp"
                />

            <TextView
                android:text="TextView"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="600dp"
                android:id="@+id/t" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_marginTop="300dp"
                android:id="@+id/tt" />

            <TextView
                android:text="TextView"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="400dp"
                android:id="@+id/ttt" />


            <TextView
            android:text="TextView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
                android:background="#ffffff"
            android:layout_marginTop="500dp"
            android:id="@+id/tttt" />

            <Button
                android:text="Find"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:background="#F0D91A"
                android:layout_centerHorizontal="true"
                android:id="@+id/button2"
                />

            <Button
                android:text="Contact"
                android:layout_width="200dp"
                android:layout_marginTop="680dp"
                android:layout_height="wrap_content"
                android:id="@+id/button10"
                android:background="#F0D91A"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
