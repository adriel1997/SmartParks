<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#F7FF1C"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adriealle.smartparks.book">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/parkmov"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Book"
    android:textSize="60dp"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="160dp"
    />

    <TextView
        android:id="@+id/editText10"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:hint="Date"
        android:inputType="textPersonName"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/editText11"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@android:color/holo_green_light"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/editText9"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:hint="Plate No."
        android:inputType="number"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/editText10"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignStart="@+id/editText10" />

    <TextView
        android:id="@+id/editText11"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:hint="Hour"
        android:inputType="time"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignStart="@+id/editText10" />

    <TextView
        android:id="@+id/min"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:hint="min"
        android:inputType="time"
        android:layout_below="@+id/editText10"
        android:layout_alignRight="@+id/editText10"
        android:layout_alignEnd="@+id/editText10" />

    <TextView
        android:text=":"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <TextView
        android:text="AT"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:background="@android:color/holo_green_light"
        android:layout_alignTop="@+id/spinner2"
        android:layout_toLeftOf="@+id/editText11"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText11" />

    <Spinner
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:entries="@array/time"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView5" />

    <TextView
        android:text="FOR"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/textView5"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:layout_alignTop="@+id/spinner2"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:entries="@array/park"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/editText11"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
